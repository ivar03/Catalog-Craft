<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BarCodeFragment"
    android:background="@color/my_white1">

    <LinearLayout
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/orange_yellow">
        <LinearLayout
            android:id="@+id/form_fill_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/orange_yellow">
            <TextView
                android:id="@+id/form_fill_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Form Filling"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/bar_code_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/middle_orange">
            <TextView
                android:id="@+id/bar_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Bar Code Scanning"
                android:textStyle="bold"
                android:textColor="#945133"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp">
        <Button
            android:id="@+id/bar_code_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/middle_orange"
            android:text="bar code"
            android:textColor="#945133"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/camera_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/middle_orange"
            android:text="Camera"
            android:textStyle="bold"
            android:textColor="#945133"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>